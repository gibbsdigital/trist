<!-- 'postListItems' must be set to use this partial -->

<ol class="post-list" id="post-list" data-pn="{{ pagination.pageNumber }}">

    {% for post in postListItems | reverse %}

        <li class="post-list__item {% if post.data.draft %}post-list__item--draft{% endif %}">
           
            <h3 class="post__title h3-display">
                <a href="{{ post.url | url }}">
                    {{ post.data.title }}
                </a>
            </h3>

            <div class="post-list__meta">
                
            <!--     <time class="post__date" datetime="{{ post.data.date | dateISO }}">
                    {{ post.data.date | dateFriendly }}
                </time> -->

            {% if post.data.tags %}
                    <ul class="post-list__tags" aria-describedby="tags-desc">
                        {% for tag in post.data.tags %}
                        <li>
                            <a href="/blog/tag/{{ tag | slug }}/">#{{ tag }}</a>
                           <!--  <a href="/blog/tag/{{ tag | slug }}/">#{{ tag | replace(' ', '') }}</a> -->
                        </li>
                        {% endfor %}
                    </ul>
                {% endif %} 

                {% if post.data.draft %}
                    <span aria-hidden="true">&sdot;</span>
                    <span class="post-list__status">(Draft)</span>
                {% endif %}
            </div>
            

            <p class="post-list__excerpt">
                {% if post.data.description %}
                    {{ post.data.description }}
                {% endif %}
            </p>
        </li>

    {% endfor %}
</ol>