{% set pageTitle = (title or site.title) %}
{% set pageUrl = site.url + page.url %}
{% set pageDesc = (description or site.description) %}
{% set pageImage = site.url + (image or site.image) %}

<meta name="description" content="{{ pageDesc }}">
<meta name="image" content="{{ pageImage }}">

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:creator" content="@{{ author.social.twitter.name}}">
<meta name="twitter:site" content="@{{ author.social.twitter.name }}">
<meta name="twitter:title" content="{{ pageTitle }}">
<meta name="twitter:description" content="{{ pageDesc }}">
<meta name="twitter:image" content="{{ pageImage }}" />

<meta property="og:site_name" content="{{ site.name }}" />
<meta property="og:title" content="{{ pageTitle }}" />
<meta property="og:description" content="{{ pageDesc }}" />
<meta property="og:url" content="{{ pageUrl }}" />
<meta property="og:image" content="{{ pageImage }}" />
{%- if layout == "layouts/post.njk" -%}
    <meta property="og:type" content="article">
    <meta property="article:published_time" content="{{ page.date | dateISO }}">
{%- else -%}
<meta property="og:type" content="website" />
{%- endif -%}
