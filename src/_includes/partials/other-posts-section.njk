{# 'otherPosts' is 3 posts from posts collection minus the current post #}

{% set otherPosts = collections.posts | excludePost(page) | slice(-3) %}

<section class="section" aria-labelledby="other-posts" style="background-color: var(--dark);">
    <div class="container">
    
        <h2 id="other-posts" class="section__title h2-display" style="color: var(--light);">More from the blog</h2>

        <div class="section__content">
            <ol reversed class="post-list">
                {% for post in otherPosts | reverse %}

                <li class="post-list__item {% if post.data.draft %}post-list__item--draft{% endif %}">
                    <h3 class="post-list__title h3-display">
                        <a
                            href="{{ post.url | url }}"
                            class="post-list__link"
                            rel="bookmark"
                            style="color: var(--light);"
                        >
                            {{ post.data.title }}
                        </a>
                    </h3>

                    <div class="post-list__meta">
                        <!-- <time
                            class="post-list__date"
                            datetime="{{ post.data.date | dateISO }}"
                        >
                            {{ post.data.date | dateFriendly }}
                        </time> -->

                        {% if post.data.tags %}
                            <ul class="post__tags" aria-describedby="tags-desc">
                                {% for tag in post.data.tags %}
                                <li>
                                    <a href="/blog/tag/{{ tag | slug }}/" style="color: var(--color-grey);">#{{ tag | replace(' ', '') }}</a>
                                </li>
                                {% endfor %}
                            </ul>
                        {% endif %} 

                        {% if post.data.draft %}
                        <span aria-hidden="true">&sdot;</span>
                        <span class="post-list__status">(Draft)</span>
                        {% endif %}

                    </div>
                </li>

                {% endfor %}
            </ol>
        </div>

        <div class="section__footer">
            <a class="see-more btn btn--primary" href="/blog/">See all posts</a>
        </div>

    </div>
</section>
