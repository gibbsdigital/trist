<section class="contact section" aria-labelledby="contact">
    <div class="container">

        <h2 id="contact" class="h-display-box mb-1">Send me a message</h2>

        <!-- <svg style="display: none">
            <symbol id="error-icon" viewBox="0 0 24 24">
