            <div 
                tabindex="-1" 
                role="group" 
                id="errorSummary" 
                class="errorSummary" 
                aria-labelledby="errorSummary-heading" 
                hidden
            >
                <h2 id="errorSummary-heading">There's a problem</h2>
                <ul>
                <li><a href="#email">Enter your email address</a></li>
                <li><a href="#name">Enter your name</a></li>
                <li><a href="#message">Enter a message</a></li>
                </ul>
          </div>

        



        <!-- CONTACT FORM  (Netlify Contact Form  https://snipcart.com/blog/netlify-forms)  -->
        <form class="contact">
           <!--  <input class="hidden" name="hpfield"> -->
            <p class="field ">
                <label for="email">
                  <span class="field-label">Email address</span>
                  <span class="field-error" hidden>
                    <svg width="1.3em" height="1.3em">
                      <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-error"></use>
                    </svg>Enter your email address</span>
                </label>
                <input type="email" id="email" name="email" maxLength="50">
            </p>

            <p class="field ">
                <label for="name">
                  <span class="field-label">Name</span>
                  <span class="field-error" hidden>
                    <svg width="1.3em" height="1.3em">
                      <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-error"></use>
                    </svg>Enter your name</span>
                </label>
                <input type="text" id="name" name="name" maxLength="50">
            </p>

            <p class="field">
                <label for="message">
                    <span class="field-label">Message</span>
                    <!-- <span class="field-hint">Max characters allowed: 100</span> -->
                    <span class="field-error" hidden>
                        <svg width="1.3em" height="1.3em">
                            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-error"></use>
                        </svg>Enter a message</span>
                </label>
                <textarea id="message" name="message" maxlength="500"></textarea>
                <!-- <div class="indicator" role="status" aria-live="polite">You have 100 characters remaining.</div> -->
            </p>
           
            <input type="submit" class="btn btn--primary" name="contact" value="Send">
        </form>
        <!-- Netlify Contact Form -->


    </div>
</section>
        



